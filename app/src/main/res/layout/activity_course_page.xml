<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent"
    android:background="#ffffff">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.galit.elective.course_page"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/rsz_logo2"
                android:background="#00000000"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:onClick="HomeClicked" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:id="@+id/textView208"
                android:text="המוח 120 שנות מחקר"
                android:layout_gravity="center_horizontal"
                android:textColor="#6271b8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView221"
                android:text="5"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView222"
                android:text="ציון כללי"
                android:textColor="#6271b8"
                android:paddingLeft="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView210"
                android:text="5"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView209"
                android:text="רמת עניין"
                android:layout_gravity="center_horizontal"
                android:textColor="#6271b8"
                android:paddingLeft="41dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView211"
                android:text="3"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView212"
                android:text="רמת קושי"
                android:layout_gravity="center_horizontal|right"
                android:textColor="#6271b8"
                android:paddingLeft="39dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView213"
                android:text="3"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView214"
                android:text="דירוג מרצה"
                android:layout_gravity="center_horizontal"
                android:textColor="#6271b8"
                android:paddingLeft="26dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/textView215"
                android:text="הקורס יעסוק בפיזיולוגיה של המוח תוך הבאת הסיפור ההיסטורי של המחקר בנוירוביולוגיה. הקורס יתאר את אבני הבניין של מערכת העצבים, יספר את סיפור התגליות הגדולות של ה ? 100 שנים האחרונות, וידגיש את הניסתר והקשיים המחקריים כיום. הקורס יתאר את אבני הבניין של מערכת העצבים, יספר את סיפור התגליות הגדולות של 100 השנים האחרונות, וידגיש את הנסתר והקשיים המחקריים כיום"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView216"
                android:text="תיאור"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5"
                android:textColor="#6271b8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15sp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לדיוק התוצאות"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#1E99DD"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:paddingTop="5sp"
                android:onClick="CritiquingClicked" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>