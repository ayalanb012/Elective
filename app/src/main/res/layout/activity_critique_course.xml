<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    tools:context="com.example.galit.elective.critiqueCourse">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/ayalalogo"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:layout_weight="3" />

        <ImageButton

            android:id="@+id/bttn_user_profile"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_menu"
            android:scaleType="fitXY"

            android:layout_width="80dip"
            android:layout_height="50dip"

            android:nestedScrollingEnabled="false"
            android:onClick="userClicked" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#efefef"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/course_name"
            android:text="המוח 120 שנות מחקר"
            android:textColor="#6271b8"
            android:padding="5dp"/>
    </LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:background="#efefef"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="right"
            android:padding="5dp">

            <TextView
                android:text="2"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />

            <TextView
                android:text="נקודות זכות"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text=""
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />

            <TextView
                android:text="7/10"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />

            <TextView
                android:text="ציון כללי"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#8e8e8e"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:padding="5dp">
            <TextView
                android:text="2/10"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="רמת קושי"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text=""
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="8/10"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="רמת עניין"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#8e8e8e"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:padding="5dp">
            <TextView
                android:text="5/10"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="רמת עומס"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="         "
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="6/10"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
            <TextView
                android:text="דירוג מרצה"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="מצא קורסים טובים יותר"
            android:textColor="#6271b8"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/turtle"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="פופולרי יותר"
                    android:textColor="#fff" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/desk"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="ללא מבחן"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/math"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="פחות עמוס"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/cupcake"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="קל יותר"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/teacher"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="מרצה טוב"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/bed"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="ללא נוכחות"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/bulb"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="מעניין יותר"
                    android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/parts"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="תפתיע אותי"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>




</LinearLayout>
