<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:background="@drawable/green2"
    tools:context="com.example.galit.elective.critiqueCourse">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/logologofinal"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:onClick="HomeClicked" />

        <ImageButton

            android:id="@+id/bttn_user_profile"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#0000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/t"
            android:scaleType="fitXY"

            android:layout_width="110dp"
            android:layout_height="wrap_content"

            android:nestedScrollingEnabled="false"
            android:onClick="userClicked" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btnshade"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/course_name"
            android:text="המוח 120 שנות מחקר"
            android:textColor="#fff"
            android:padding="5dp" />
    </LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:background="@drawable/btnshade"

        android:layout_height="wrap_content">

        <TableRow
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:text="2"
                android:id="@+id/txt_commentNum"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />

            <TextView
                android:text="מס&apos; תגובות"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text=""
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8"
                android:layout_width="15dp" />

            <TextView
                android:text="7/10"
                android:id="@+id/txt_grade"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />

            <TextView
                android:text="ציון כללי"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#8e8e8e"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="2/10"
                android:id="@+id/txt_diff"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text="רמת קושי"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text=""
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8"
                android:layout_width="15dp" />
            <TextView
                android:text="8/10"
                android:id="@+id/txt_interest"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text="רמת עניין"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#8e8e8e"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="5/10"
                android:id="@+id/txt_load"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text="רמת עומס"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text="         "
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#6271b8"
                android:layout_width="15dp" />
            <TextView
                android:text="6/10"
                android:id="@+id/txt_lecture"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
            <TextView
                android:text="דירוג מרצה"
                android:padding="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffff" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="מצא קורסים טובים יותר"
            android:textColor="#6271b8"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btnshade"
                    android:drawableTop="@drawable/america"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="פופולרי יותר"
                    android:textColor="#fff"
                    android:onClick="popularClicked" />

            </LinearLayout>



             <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btnshade"
                    android:drawableTop="@drawable/math"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="פחות עמוס"
                    android:onClick="loadClicked"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btnshade"
                    android:drawableTop="@drawable/cupcake"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="קל יותר"
                    android:onClick="easyClicked"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btnshade"
                    android:drawableTop="@drawable/teacher"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="מרצה טוב"
                    android:onClick="lectureClicked"
                    android:textColor="#fff" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btnshade"
                    android:drawableTop="@drawable/bulb"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="מעניין יותר"
                    android:onClick="interestClicked"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btnshade"
                    android:drawableTop="@drawable/baloons"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="תפתיע אותי"
                    android:onClick="surpriseClicked"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>




</LinearLayout>
