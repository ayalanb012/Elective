<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/courselistdesign"
   >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:background="@drawable/courselistdesign"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="right"
            android:padding="3dp">

            <TextView
                android:text="2"
                android:id="@+id/txt_commentNum"
                android:padding="3dp"
                android:textColor="#ffff" />

            <TextView
                android:text="מספר תגובות"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text=""
                android:padding="3dp"
                android:textColor="#ffff" />

            <TextView
                android:text="7/10"
                android:id="@+id/txt_grade"
                android:padding="3dp"
                android:textColor="#ffff" />

            <TextView
                android:text="ציון כללי"
                android:textColor="#ffff" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#8e8e8e"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:padding="3dp">
            <TextView
                android:text="2/10"
                android:id="@+id/txt_diff"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="רמת קושי"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text=""
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="8/10"
                android:id="@+id/txt_interest"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="רמת עניין"
                android:padding="3dp"
                android:textColor="#ffff" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#8e8e8e"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:gravity="right"
            android:padding="3dp">
            <TextView
                android:text="5/10"
                android:id="@+id/txt_load"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="רמת עומס"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="         "
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="6/10"
                android:id="@+id/txt_lecture"
                android:padding="3dp"
                android:textColor="#ffff" />
            <TextView
                android:text="דירוג מרצה"
                android:padding="3dp"
                android:textColor="#ffff" />
        </TableRow>

    </TableLayout>


</LinearLayout>